{
  "name": "@alexandria/configuration_manager",
  "version": "0.1.0",
  "description": "A stateless YAML-based configuration manager library for Alexandria on the Deno runtime.",
  "exports": {
    ".": "./mod.ts"
  },
  "compilerOptions": {
    "lib": ["ES2024", "deno.ns"],
    "strict": true
  },
  "tasks": {
    "check": "deno check mod.ts",
    "bundle": "deno bundle mod.ts -o dist/configuration_manager.bundle.js"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0"
  }
}
